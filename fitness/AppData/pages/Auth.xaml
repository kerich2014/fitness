<Page x:Class="fitness.AppData.pages.Auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:fitness.AppData.pages"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="800"
      Title="Auth">

    <Grid>
        <Label Content="Введите логин" HorizontalAlignment="Center" Margin="0,71,0,0" VerticalAlignment="Top" FontSize="20" FontFamily="Calibri Light"/>
        <TextBox x:Name="txb_login" HorizontalAlignment="Center" Margin="0,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="260" FontSize="20" FontFamily="Calibri Light"/>
        <Label Content="Введите пароль" HorizontalAlignment="Center" Margin="0,141,0,0" VerticalAlignment="Top" FontSize="20" FontFamily="Calibri Light"/>
        <PasswordBox x:Name="psb_password" HorizontalAlignment="Center" Margin="0,180,0,0" VerticalAlignment="Top" Width="260" FontSize="20" FontFamily="Calibri Light"/>
        <Button x:Name="btn_enter" Content="Войти" HorizontalAlignment="Center" Margin="0,244,0,0" VerticalAlignment="Top" FontSize="20" FontFamily="Calibri Light" Width="100" Click="btn_enter_Click"/>

    </Grid>
</Page>
